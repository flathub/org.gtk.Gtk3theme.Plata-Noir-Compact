{
  "id": "org.gtk.Gtk3theme.Plata-Noir-Compact",
  "branch": "3.24",
  "runtime": "org.freedesktop.Platform",
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "1.6",
  "build-extension": true,
  "appstream-compose": false,
  "separate-locales": false,
  "build-options": {
    "prefix": "/usr/share/runtime"
  },
  "modules": [
    {
      "name": "plata-theme-flatpak",
      "config-opts": [
        "--disable-mixed",
        "--disable-light",
        "--enable-dark",
        "--enable-compact"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.com/tista500/plata-theme-flatpak/-/archive/0.5.2/plata-theme-flatpak-0.5.2.tar.gz",
          "sha256": "137e5303f186d568c127586c9492504b0d7f67ca4cce3f7d32a1043d9b2bbee6"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.Plata-Noir-Compact.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.Plata-Noir-Compact --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Plata-Noir-Compact"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.Plata-Noir-Compact.appdata.xml"
        }
      ]
    }
  ]
}
